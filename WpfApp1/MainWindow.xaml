        <Button Content="ล้างหน้าต่าง" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Height="35" Width="300" Background="#FF515DDD" BorderBrush="{x:Null}" Foreground="White" FontSize="18" Click="Button_Click_2"/>

    </Grid>
</Window>
