        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="35" Margin="340,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Background="#FF202225" BorderBrush="{x:Null}" Foreground="White"/>
