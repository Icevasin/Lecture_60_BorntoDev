        <TextBox x:Name="txtTotal" HorizontalAlignment="Left" Height="35" Margin="356,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="211" Background="#FF202225" BorderBrush="{x:Null}" Foreground="White" IsReadOnly="True"/>
