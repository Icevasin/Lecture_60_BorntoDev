        <Label Content="บาท / วัน" HorizontalAlignment="Left" Height="30" Margin="572,42,0,0" VerticalAlignment="Top" Width="76" FontSize="16" Foreground="#FF9A9DA1"/>
        <TextBox x:Name="txtExpenses" HorizontalAlignment="Left" Height="35" Margin="267,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Background="#FF202225" BorderBrush="{x:Null}" Foreground="White"/>
